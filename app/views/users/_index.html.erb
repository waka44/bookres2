            <table class = "table">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.each do |user| %>
                    <tr>
                        <td>
                            <%= link_to user_path(user.id) do %>
                            <%= image_tag user.get_profile_image, size: "auto" %>
                            <% end %>
                        </td> 
                        <td><%= user.name %></td>
                        <td><%= user.introduction %></td>
                        <td><%= link_to "Show", user_path(user.id) %></td>
                    </tr>
                    
                <% end %>
                </tbody>
            </table>
