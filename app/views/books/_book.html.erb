<div class = "container px-5 px-sm-0" >
    <div class = "row" >
      <div class = "col-md-3" >

        <h2>Books</h2>
        <% books.each do |book| %>
        <div>
          <%= link_to book_path(book.id) do %>
          <%= image_tag book.user.get_profile_image %>
        <% end %>
        <table class = "table">
          <tbody>
            <tr>
              <th>Title</th>
              <th><%= book.title %></th>
            </tr>
            <tr>
              <th>Opinion</th>
              <th><%= book.body %></th>
            </tr>
          </tbody>
        </table >
        </div>
        <% end %>
      </div>
    </div>
</div>
