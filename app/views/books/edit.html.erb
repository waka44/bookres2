<p id = "notice" ></p>
<div class = "container" >
  <div class = "row" >
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
      <h1>Editing Book</h1>
      <%= form_with model: @user do |f| %>
      <tr>
      <label for="title">Title</label>
      <%= f.text_field :title, autofocus: true, id:"title", placeholder:"Title"%>
      </tr>
      <tr>
      <label for="body">Opinion</label>
      <%= f.string_field :body, autofocus: true, id:"body", placeholder:"Opinion"%>
      </tr>
      <tr>
      <%= f.submit "Update User" %>
      </tr>
      <% end %>
    </div>
  </div>
</div>

